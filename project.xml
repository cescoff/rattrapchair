<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<project>
	<name>Rat Trap Chair</name>
    <thumbnail-url>https://github.com/cescoff/rattrapchair/blob/master/chair_preview.jpeg?raw=true</thumbnail-url>
    <variables-url>https://raw.githubusercontent.com/cescoff/rattrapchair/master/variables.xml</variables-url>
    <template-url>https://raw.githubusercontent.com/cescoff/rattrapchair/master/Chair.xml</template-url>
    <output-config-url>https://raw.githubusercontent.com/cescoff/rattrapchair/master/chairOutputConfig.xml</output-config-url>
    <dynamic-preview-url>https://raw.githubusercontent.com/cescoff/rattrapchair/master/Chair_Shape.xml</dynamic-preview-url>
    <dynamic-preview-output-url>https://raw.githubusercontent.com/cescoff/rattrapchair/master/chair_ShapeOutputConfig.xml</dynamic-preview-output-url>
    <documentation-url>https://raw.githubusercontent.com/cescoff/rattrapchair/master/doc/instructions.html</documentation-url>
    <description>Customizable flat folding chair made out of wood</description>
    <presentation>&lt;p&gt;The folding chair prototype.&lt;/p&gt;&lt;p&gt;This project proves the concept of the wood based hinge. The hinge is calculated dynamically depending on the desired parameters.&lt;/p&gt;&lt;p&gt;The hinge and sliders are distributed through 3 different layers. The one in the middle embeds the axles holes.&lt;/p&gt;&lt;p&gt;The mounting instructions are provided within the zip archive that can be downloaded&lt;/p&gt;&lt;p&gt;Sources are available here: &lt;a href=&quot;https://github.com/cescoff/rattrapchair&quot;&gt;&lt;u&gt;https://github.com/cescoff/rattrapchair&lt;/u&gt;&lt;/a&gt;&lt;/p&gt;&lt;p&gt;Enjoy it, it is free&lt;/p&gt;</presentation>
    <default>
        <variable name="fullSeatHeight" display-name="Seat height (distance from the floor)" unit="mm" description="In millimeters">430</variable>
        <variable name="fullSeatLength" display-name="Seat length" unit="mm" description="In millimeters">310</variable>
        <variable name="fullSeatwidth" display-name="Seat width" unit="mm" description="In millimeters">310</variable>
        <variable name="fullUpright" display-name="Chair upright (visible on the front of the chair)" unit="mm" description="In millimeters">50</variable>
        <variable name="alphaDeg" display-name="Back vertical axis angle" unit="degrees" description="In degrees">17</variable>
	<variable name="fullSeatHingeWidth" display-name="Hinge crenel tooth width (minimum value)" unit="mm" description="In millimeters">19</variable>
	<variable name="fullCutLength" display-name="Laser cut machine feat length" unit="mm" description="In millimeters">720</variable>
    </default>
    <printable>
        <variable name="fullhorizontalSeatLength" display-name="Horizontal seat length" unit="mm" description="">430</variable>
        <variable name="fullFrontLegLength" display-name="The length of the chair front leg" unit="mm" description="">430</variable>
	<variable name="fullRearLegLength" display-name="The length of the chair rear leg" unit="mm" description="">430</variable>
        <variable name="fullFeetSpan" display-name="The feet span" unit="mm" description="">430</variable>
	<variable name="fullChairLength" display-name="The length of the chair once folded" unit="mm" description="">430</variable>
    </printable>
</project>
